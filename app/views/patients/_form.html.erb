<%= simple_form_for @patient do |f| %>
  <%= f.input :first_name, label: "Prénom", input_html: { class: "card-filter" } %>
  <%= f.input :last_name, label: "Nom de famille", input_html: { class: "card-filter" } %>
  <%= f.input :age, label: "Âge", input_html: { min: '0', step: 'any', class: "card-filter" } %>
  <%#= f.input :color, label: "Couleur", input_html: { class: "card-filter" } %>
  <%= f.input :security_card_number, label: "Numéro de carte de sécurité", input_html: { class: "card-filter" } %>
  <%= f.input :height, label: "Taille (cm)", input_html: { min: '0', step: 'any', class: "card-filter" } %>
  <%= f.input :weight, label: "Poids (kg)", input_html: { min: '0', step: 'any', class: "card-filter" } %>
  <%= f.input :bloodtype, label: "Groupe sanguin", collection: ["A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-"], input_html: { class: "card-filter" } %>
  <%= f.input :gender, label: "Genre", collection: ["Homme", "Femme", "Non précisé"], input_html: { class: "card-filter" } %>

  <%= f.input :address,
  input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>

  <%= f.input :allergies, label: "Allergies", input_html: { class: "card-filter" } %>
  <%= f.input :chronic_illness, input_html: { class: "card-filter" }, collection: ["Aucune", "Hypertension", "Bronchopneumopathie chronique obstructive", "Insuffisance cardiaque chronique", "Diabète de type II", "Diabète de type I", "Maladie oncologique", "L'asthme bronchique", "Anémie", "Dépression"], label: "Maladies chroniques" %>
  <%= f.input :user_id, label: false, input_html: {value: current_user.id, class: "d-none"}%>
  <%= f.input :photo, as: :file, input_html: { class: "card-filter" } %>
  <%= f.button :submit, "Enregistrer", class: "btn button" %>
<% end %>
