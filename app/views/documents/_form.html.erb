<%= simple_form_for @document do |f| %>
  <%= f.input :title, label: "Titre" %>
  <%= f.input :date, label: "Date" %>
  <%= f.input :document, as: :file, label: "Document à télécharger (.pdf)" %>
  <%= f.input :category, label: "Catégorie" %>
  <%= f.input :doctor, label: "Docteur" %>
  <%= f.input :patient_id, label: "Patient" %>
  <%= f.button :submit, "Enregistrer le document" %>
<% end %>
