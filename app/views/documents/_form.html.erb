<%= simple_form_for @document do |f| %>
  <%= f.input :title, label: "Titre",input_html: { class: "card-filter" } %>
  <%= f.input :date, label: "Date",
            as: :string,
            input_html: { data: { controller: "flatpickr" } } %>
  <%#= f.input :document_type, label: "Type du document", collection: Document.document_types.keys, input_html: { class: "card-filter" }%>
  <%= f.input :document_type, label: "Type du document", collection: Document.select_enum_attribute(:document_type), input_html: { class: "card-filter" } %>
  <%= f.input :photo, as: :file, label: "Photo à télécharger (.jpg/ .png/ .jpeg)", input_html: { class: "card-filter" } %>
  <%= f.input :doctor, label: "Docteur", input_html: { class: "card-filter" } %>
  <%= f.input :patient_id, collection: current_user.patients.map { |patient| ["#{patient.first_name} #{patient.last_name.upcase}", patient.id]}, label: "Patient", input_html: { class: "card-filter" } %>
  <%= f.button :submit, "Enregistrer le document", class: "btn button" %>
<% end %>
