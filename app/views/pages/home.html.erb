<div class="log-out">
  <a data-turbo-method="delete" href="/users/sign_out"><i class="fa-solid fa-arrow-right-from-bracket"></i> Se d√©connecter</a>
</div>

<%= cl_image_tag current_user.patient.photo.key, class:"avatar" %>
<h1 class="mb-3">Bonjour <%= current_user.patient.first_name%></h1>

<div class="card-reminder">
  <div class="div">
  <i class="fa-solid fa-bell"></i>
  <% first_patient = current_user.patients.first %>
  <% if first_patient.present? %>
    <% today_reminder = first_patient.reminders.find_by(start_time: Date.today) %>
    <% if today_reminder.present? %>
      <p>Votre rappel pour aujourd'hui : <strong> <%= today_reminder.title %></strong></p>
    <% else %>
      <p>Aucun rappel pour aujourd'hui</p>
    <% end %>
  <% end %>
</div>

</div>

<div class="d-flex justify-content-between mt-3">
  <a href="<%=patient_my_profile_path(current_user.patient) %>">
    <div class="card-home">
      <div class="div">
        <i class="fa-solid fa-user"></i>
        <h2>Profil</h2>
      </div>
    </div>
  </a>
  <a href="/my_bloodtests">
   <div class="card-home">
    <div class="div">
      <i class="fa-solid fa-chart-line"></i>
      <h2>Suivi</h2>
    </div>
  </div>
  </a>
</div>

<div class="d-flex justify-content-between">
<a href="/articles">
  <div class="card-home">
    <div class="div">
      <i class="fa-solid fa-lightbulb"></i>
      <h2>Conseils</h2>
    </div>
  </div>
  </a>

   <a href="<%= patients_path %>">
    <div class="card-home">
    <div class="div">
      <i class="fa-solid fa-users"></i>
      <h2 >Proches</h2>
    </div>
  </div>
  </a>
</div>

