<%= cl_image_tag current_user.patient.photo.key, class:"avatar" %>
<h1 class="mb-3">Bonjour <%= current_user.patient.first_name%></h1>

<div class="card-reminder">
  <div class="div">
  <i class="fa-solid fa-bell"></i>
  <% if @first_patient.present? %>
    <% if @first_reminder.present? %>
        <% @first_reminder_date = @first_reminder.start_time.to_s %>
        <% @date_a_verifier = DateTime.parse(@first_reminder_date) %>
          <% if @date_a_verifier.day == @date_actuelle.day %>
            <p>Votre rappel pour aujourd'hui : <strong> <%= @first_reminder.title %></strong></p>
          <% else %>
            <p>Aucun rappel pour aujourd'hui</p>
          <% end %>
    <% else %>
      <p>Aucun rappel pour aujourd'hui</p>
    <% end %>
  <% end %>
</div>
</div>

