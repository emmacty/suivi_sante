<%= simple_form_for @reminder do |f| %>
  <div class="form-inputs">
    <%= f.input :title, label: "Titre" %>
    <%= f.input :content, label: "Commentaire" %>
    <%= f.input :start_time, label: "Date et Heure",
      as: :string,
      input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :frequency_unity, collection: Reminder.select_enum_attribute(:frequency_unity), label: "Répétition", input_html: { class: "card-filter" } %>
    <%= f.input :patient_id, collection: current_user.patients.map { |p| ["#{p.first_name} #{p.last_name}", p.id] }, prompt: "Sélectionner un patient", input_html: { class: "card-filter" } %>
    <%= f.input :category, label: "Catégorie", collection: ["Rendez-vous", "Traitement", "Contrôle"], input_html: { class: "card-filter" } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn button" %>
  </div>
<% end %>
